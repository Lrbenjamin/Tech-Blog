{{> header}}
<main>
    <section>
        <h2>My Posts</h2>
        {{#each posts}}
        <article>
            <h3>{{this.title}}</h3>
            <p>{{this.content}}</p>
            <p>Posted on {{this.createdAt}}</p>
            <button class="edit-btn" data-id="{{this.id}}">Edit</button>
            <button class="delete-btn" data-id="{{this.id}}">Delete</button>
        </article>
        {{/each}}
    </section>
    <section>
        <h2>New Post</h2>
        <form id="new-post-form">
            <input type="text" id="new-post-title" name="title" placeholder="Title">
            <textarea id="new-post-content" name="content" placeholder="Content"></textarea>
            <button type="submit">Add Post</button>
        </form>
    </section>
</main>
<script src="/js/dashboard.js"></script>
